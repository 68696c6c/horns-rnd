    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node"
  },
  "include": [
    ".eslintrc.js",
    "./**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
